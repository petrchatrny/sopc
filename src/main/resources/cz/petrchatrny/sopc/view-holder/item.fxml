<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<HBox fx:id="view" styleClass="root" stylesheets="@../styles/item.css" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1">
    <ImageView fx:id="image" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@../images/items/magnetite.png"/>
        <HBox.margin>
            <Insets right="10.0"/>
        </HBox.margin>
    </ImageView>
    <VBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="Infinity" HBox.hgrow="ALWAYS">
        <Label fx:id="name" text="null"/>
        <Label fx:id="count" text="null"/>
    </VBox>
</HBox>
